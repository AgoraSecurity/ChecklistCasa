[flake8]
max-line-length = 88
extend-ignore =
    E501,
    E121,
    E123,
    E126,
    E226,
    E24,
    E704,
    W503,
    W504
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    migrations,
    *.pyc,
    *.egg-info
per-file-ignores =
    # Ignore unused imports in __init__.py files
    __init__.py:F401
    # Ignore line length in migrations
    migrations/*:E501
